name: '{{ notice_group_name }}'

alert:
  '00:00--23:59':
    remind:
      type: [weixin, mail]
    warning:
      type: [weixin, mail]
    fatal:
      type: [weixin, mail]

action:
  '00:00--23:59':
    execute:
      type: [weixin, mail]
    execute_failed:
      type: [weixin, mail]
    execute_success:
      type: [weixin, mail]

users:
{% for user in receivers or []%}
  - {{ user }}
{% endfor %}
